<UserControl x:Class="OrienteeringToolWPF.Views.RelaysAndCompetitorsTreeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:OrienteeringToolWPF.Views"
             xmlns:model="clr-namespace:OrienteeringToolWPF.Model"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <TreeView Name="relaysAndCompetitorsTV" SelectedItemChanged="relaysAndCompetitorsTV_SelectedItemChanged">
        <TreeView.Resources>
            <!-- Relay template -->
            <HierarchicalDataTemplate 
                DataType="{x:Type model:Competitor}" 
                ItemsSource="{Binding Competitors}">
                <TextBlock Text="{Binding Name}"/>
                <!-- Competitor template -->
                <HierarchicalDataTemplate.ItemTemplate>
                    <DataTemplate>
                        <TextBlock>
                            <TextBlock.Text>
                                <MultiBinding StringFormat=" {0} - ({1})">
                                    <Binding Path="Name"/>
                                    <Binding Path="Chip"/>
                                </MultiBinding>
                            </TextBlock.Text>
                        </TextBlock>
                    </DataTemplate>
                </HierarchicalDataTemplate.ItemTemplate>
                <!-- End of Competitor template -->
            </HierarchicalDataTemplate>
            <Style TargetType="TreeViewItem">
                <Setter Property="IsSelected" Value="{Binding Path=IsSelected}"/>
                <Setter Property="IsExpanded" Value="{Binding Path=IsExpanded}"/>
            </Style>
            <!-- End of Relay template -->
        </TreeView.Resources>
    </TreeView>
</UserControl>
