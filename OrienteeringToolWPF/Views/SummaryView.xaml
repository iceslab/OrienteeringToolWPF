<UserControl x:Class="OrienteeringToolWPF.Views.SummaryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:OrienteeringToolWPF.Views"
             xmlns:lists="clr-namespace:OrienteeringToolWPF.Views.Lists"
             xmlns:main="clr-namespace:OrienteeringToolWPF.Windows"
             xmlns:model="clr-namespace:OrienteeringToolWPF.Model"
             xmlns:root="clr-namespace:OrienteeringToolWPF"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="500">
    <UserControl.DataContext>
        <model:Tournament/>
    </UserControl.DataContext>
    <TabControl x:Name="summaryViewTC" Grid.Row="0" Grid.Column="0"
                    Margin="5">
        <TabItem Header="Sztafety i zawodnicy" Name="relaysAndCompetitorsTV" >
            <local:RelaysAndCompetitorsView/>
        </TabItem>
        <TabItem Header="Klasyfikacja">
            <local:ClassificationView/>
        </TabItem>
    </TabControl>
</UserControl>
